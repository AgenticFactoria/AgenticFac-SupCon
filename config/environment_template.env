# Factory Control System Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# Moonshot API Key (Required for AI agent functionality)
MOONSHOT_API_KEY=your_moonshot_api_key_here

# Alternative LLM providers (if not using Moonshot)
# OPENAI_API_KEY=your_openai_api_key_here
# AZURE_OPENAI_API_KEY=your_azure_api_key_here

# =============================================================================
# MQTT Configuration
# =============================================================================

# Topic root for MQTT messages (Optional - defaults to username)
# This helps separate different users/teams in shared environments
TOPIC_ROOT=NLDF_YOUR_TEAM_NAME

# Alternative topic naming
# USERNAME=your_username  # Will be used if TOPIC_ROOT not set
# USER=your_user         # Will be used as fallback

# =============================================================================
# System Configuration (Optional)
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Factory Configuration (Optional - Advanced)
# =============================================================================

# Production lines to activate (comma-separated)
# Default: line1 (MVP mode)
# FACTORY_LINES=line1,line2,line3

# Supported product types (comma-separated)
# Default: P1,P2 (MVP mode)
# FACTORY_PRODUCTS=P1,P2,P3

# =============================================================================
# MQTT Broker Configuration (Optional - Advanced)
# =============================================================================

# MQTT broker settings (defaults to SUPCON hosted broker)
# MQTT_HOST=supos-ce-instance4.supos.app
# MQTT_PORT=8083
# MQTT_USERNAME=your_mqtt_username
# MQTT_PASSWORD=your_mqtt_password

# =============================================================================
# Example Configurations for Different Scenarios
# =============================================================================

# Development Environment
# TOPIC_ROOT=NLDF_DEV_YOURNAME
# DEBUG=true
# LOG_LEVEL=DEBUG

# Testing Environment
# TOPIC_ROOT=NLDF_TEST_TEAM1
# DEBUG=false
# LOG_LEVEL=INFO

# Production Environment
# TOPIC_ROOT=NLDF_PROD_COMPANY
# DEBUG=false
# LOG_LEVEL=WARNING 